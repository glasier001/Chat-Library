<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--100    Extra Light or Ultra Light
200    Light or Thin
300    Book or Demi
400    Normal or Regular
500    Medium
600    Semibold, Demibold
700    Bold
800    Black, Extra Bold or Heavy
900    Extra Black, Fat, Poster or Ultra Black-->

    <!-- regular -->
    <font
        android:font="@font/avenir_next_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/avenir_next_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/avenir_next_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/avenir_next_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!--Medium-->
    <font
        android:font="@font/avenir_next_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/avenir_next_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!--Demibold-->
    <font
        android:font="@font/avenir_next_demi_bold"
        android:fontStyle="normal"
        android:fontWeight="600"

        app:font="@font/avenir_next_demi_bold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!-- bold -->
    <font
        android:font="@font/avenir_next_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/avenir_next_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

</font-family>
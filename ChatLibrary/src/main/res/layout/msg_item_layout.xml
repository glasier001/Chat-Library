<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_layout_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_35sdp"
            android:background="@drawable/bg_receiver"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:lines="1"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_msg_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_name_l"
                android:autoLink="web"
                android:background="@drawable/bg_receiver"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorLink="@color/colorPrimary"
                android:visibility="gone" />





        </androidx.appcompat.widget.LinearLayoutCompat>



        <ImageView
            android:id="@+id/item_img_l"
            android:layout_width="@dimen/view_space_150"
            android:layout_height="@dimen/view_space_150"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_receiver"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/item_img_play_l"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_play"
            android:visibility="gone"
            app:tint="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_layout_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:background="@drawable/bg_sender"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:id="@+id/item_name_r"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:gravity="center"-->
            <!--                android:lines="1"-->
            <!--                android:padding="@dimen/_5sdp"-->
            <!--                android:text="Amrita"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="@dimen/_12sdp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:visibility="gone" />-->

            <TextView
                android:id="@+id/item_msg_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_name_r"
                android:autoLink="web"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:visibility="gone" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/item_img_r"
            android:layout_width="@dimen/view_space_150"
            android:layout_height="@dimen/view_space_150"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_sender"
            android:gravity="center"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_img_play_r"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_play"
            android:visibility="gone"
            app:tint="@color/white" />


    </RelativeLayout>


    <TextView
        android:id="@+id/itemCallDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_space_5"
        android:background="@drawable/bg_gray_border"
        android:drawableLeft="@drawable/ic_call_small"
        android:drawablePadding="@dimen/view_space_5"
        android:drawableTint="@color/black"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/black"
        android:visibility="gone" />

</RelativeLayout>
